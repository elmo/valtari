<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Subject</th>
      <th>Body</th>
      <th>Opened</th>
      <th>Thread ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= link_to message.user.name, my_message_path(message) %></td>
        <td><%= message.recipient.name %></td>
        <td><%= message.subject %></td>
        <td><%= message.body %></td>
        <td><%= message.opened %></td>
        <td><%= message.thread_id %></td>
        <td><%= link_to 'Show', my_message_path(message) %></td>
        <td><%= link_to 'Reply', new_my_message_path(message, recipient_id: message.user_id, thread_id: message.thread_id) %></td>
        <td><%= link_to 'Destroy', my_message_path(message), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
<%= link_to 'New message', new_my_message_path(recipient_id: 9 ) -%>
</p>
