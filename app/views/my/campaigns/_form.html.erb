<%= simple_form_for([:my, @campaign]) do |f| %>
  <%= f.error_notification %>
  <%= f.input :title, label: false, placeholder: 'Campaign title'  %>
  <%= f.input :stage, collection: company_stage_options, wrapper: :material_select, prompt: "Choose company stage"  %>
  <%= f.input :revenue_lower %>
  <%= f.input :revenue_upper %>
  <%= f.input :ebitda_lower %>
  <%= f.input :ebitda_upper %>
  <%= f.input :industry_id, collection: industry_options, wrapper: :material_select, prompt: "Choose Industry"  %>
  <%= f.button :submit, "#{(@campaign.persisted?) ? 'Update' : 'Save'}" %>
<% end %>
