<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <div class="sub">
        </div>
        <div class="card-title">
          Members</div>
          <% if current_user.followed_users.any?  %>
            <p>Users I'm following:</p>
            <ul>
            <% current_user.followed_users.each do |user| %>
                <li> <%= user.name -%>
                 <%= following_user_link(user, remote: false) -%>
                </li>
            <% end %>
            </ul>
          <% else %>
             <p>You are currently not following any users.</p>
          <% end %>

          <% if current_user.following_users %>
            <p>Users following me:</p>
            <ul>
            <% current_user.following_users.each do |user| %>
                <li><%= user.name -%>
                 <%= following_user_link(user, remote: false) -%>
                </li>
            <% end %>
            </ul>
          <% else  %>
             <p>You are currently not followed by any users.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>