<tr>
    <td><%= link_to buyside.title, my_buyside_path(buyside) %>
        <br />
        <%= buyside.user.name -%>
        <%= link_to  new_my_message_path(recipient_id: buyside.user.id ) do %>
         <i class="ion-email" data-pack="default" data-tags="box, square, container"></i>
        <% end %>
        <%= following_user_link(buyside.user, remote: false) -%>
    </td>
  <td><%= buyside.stage %></td>
  <td><%= buyside.revenue_lower %></td>
  <td><%= buyside.revenue_upper %></td>
  <td><%= buyside.ebitda_lower %></td>
  <td><%= buyside.ebitda_upper %></td>
  <td><%= buyside.industry_classifications.collect(&:name).join(', ') %></td>
  <td>
    <%= link_to(edit_my_buyside_path(buyside) , class: "inline-link") do %>
      <i class="material-icons tiny">mode_edit</i>
    <% end %>
    <%= link_to(my_buyside_path(buyside), method: :delete, data: { confirm: 'Are you sure want to remove this buyside?' }, class: "inline-link") do  %>
      <i class="material-icons tiny">delete </i>
    <% end %>
  </td>
</tr>
