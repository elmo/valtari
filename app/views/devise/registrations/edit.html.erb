<script type="text/javascript">

/* Range slider stuff */
$(function() {
    
    $("#pips-slider")
    
      .slider({
        
          range: true,
          min: 5,
          max: 500,
          values: [ 5, 500 ],
          step: 25
        
        })
    
      .slider("pips", {
          
          first: "pip",
          last: "pip",
          rest: "pip",
          step: 45,
          labels: true,
          prefix: "",
          suffix: " million"
        
        })
    
      .slider("float", {
          
          handle: true,
          pips: false,
          labels: true,
          prefix: "",
          suffix: ""
        
      });

});
</script>