<script type="text/javascript">

/* Range slider stuff */
$(function() {
    
    $("#pips-slider")
    
      .slider({
        
          range: true,
          min: 5,
          max: 100,
          values: [ 5, 70 ],
          step: 5
        
        })
    
      .slider("pips", {
          
          first: "pip",
          last: "pip",
          rest: "pip",
          step: 10,
          labels: true,
          prefix: "",
          suffix: " million"
        
        })
    
      .slider("float", {
          
          handle: true,
          pips: false,
          labels: false,
          prefix: "",
          suffix: ""
        
      });

});
</script>