<h1>Invitations</h1>
<%= render partial: '/private/deal_room_invitations/form' -%>
<% if @deal_room_invitations.any? %>
<table>
 <thead>
   <th>Date</th>
   <th>Email</th>
   <th>Revoke</th>
   <th>Resend</th>
 </thead>
 <% @deal_room_invitations.each do |invitation| %>
     <tr>
       <td>
       <%= format_date_and_time(invitation.created_at) -%>
       <td>
       <%= invitation.email -%>
       <td>
           <%= link_to(private_deal_room_deal_room_invitation_path( @deal_room, invitation),
                       method: :delete,
                       data: {confirm: "Are you sure that you want to delete this invitation?" } ) do %>
         <i class="material-icons tiny">delete</i>
        <% end %>
        </td>
       <td><%= link_to('resend', resend_private_deal_room_deal_room_invitation_path(@deal_room, invitation ) , method: :put ) %></td>
      </tr>
    <% end %>
 </table>
 <%= paginate(@deal_room_invitations) -%>
<% else %>
  <p>There have been no invitations created for this deal room.</p>
<% end%>
