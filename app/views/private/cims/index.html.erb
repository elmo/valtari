<div class="card">
  <div class="card-content">
    <div class="card-title">CIMs</div>
      <table>
        <thead>
          <tr>
            <th>Name</th>
          </tr>
        </thead>
        <tbody>
          <% @cims.each do |cim| %>
            <tr>
               <td><%= cim.name %>
                 <%= link_to 'Show', private_cim_path(cim) %>
                 <%= link_to 'Edit', edit_private_cim_path(cim) %>
                 <%= link_to 'Delete', private_cim_path(cim) , method: :delete, data: { confirm: 'Are you sure you want to destroy this CIM?' } %>
                 <%= link_to 'Users', private_cim_users_path(cim)  -%> (<%= cim.cim_authorizations.count -%>)
               </td>
             </tr>
           <% end %>
         </tbody>
       </table>
       <p><%= link_to 'Create a new CIM', new_private_cim_path %></p>
     </div>
  </div>
</div>
