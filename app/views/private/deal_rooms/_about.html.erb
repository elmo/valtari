<div class="vdr-header">
  <span class="vdr-title">Virtual Data Room</span>

  <div class="col s7">
    <h3><%= link_to @deal_room.name, private_deal_room_path(@deal_room), class: 'title-link' -%> </h3>
    <b><%= @deal_room.company_name -%></b>
    <% if current_user == @deal_room.user %>
       <%= link_to 'Edit', edit_private_deal_room_path(@deal_room) -%>
    <% end %>
  </div>

  <div class="col s5">
    <br />

    <div class="chip">
   	 <%= avatar_image(@deal_room.user, 'tiny-image') %>
     <span>Room owner:</span> <%= @deal_room.user.full_name -%>
  	</div>
    <br />

    <div class="chip">
       <%= link_to private_deal_room_deal_room_authorizations_path(@deal_room)  do %>
        <%= @deal_room.deal_room_authorizations.count %> <span>Users</span>
       <% end %>
    </div>

    <div class="chip">
       <%= link_to private_deal_room_deal_room_invitations_path(@deal_room)  do %>
        <%= @deal_room.deal_room_invitations.count %> <span>Invitations</span>
       <% end %>
    </div>

    <div class="chip">
       <%= link_to private_deal_room_deal_room_uploads_path(@deal_room)  do %>
        <%= @deal_room.deal_room_uploads.count %> <span>Files</span>
       <% end %>
    </div>

    <div class="chip">
       <%= link_to polymorphic_url([:private, @deal_room, Note])  do %>
        <%= @deal_room.notes.count %> <span>Notes</span>
       <% end %>
    </div>
  </div>

</div>
