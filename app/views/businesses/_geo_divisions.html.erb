<div class="geo-list">
  <% if false %>
    <% division1_names.each do |name| %>
    <%= link_to name, businesses_path(division1: name,  q: params[:q]) -%> 
  <% end %>
<% end %>


<% if params[:division1].present? %>
<div>
  &nbsp; Filter by Region: 
  <%  names_within_division1(params[:division1]).each do |name| %>
      <%= link_to name, businesses_path(division1: params[:division1],
                                        division2: name, q: params[:q] ),
                                        class: params[:division2]==name ? 'active' : ' ' -%> 
   <% end %>
</div>
<% end %>


<% if params[:division2].present? %>
<div>
  <%  names_within_division2(params[:division2]).each do |name| %>
      <%= link_to name, businesses_path(division1: params[:division1],
                                        division2: params[:division2],
                                        division3: name, q: params[:q] ),
                                        class: params[:division3]==name ? 'active third' : ' ' -%> 
   <% end %>
</div>
<% end %>



<% if params[:division3].present? %>
<div>
  <%  names_within_division3(params[:division3]).each do |name| %>
      <%= link_to name, businesses_path(division1: params[:division1],
                                        division2: params[:division2],
                                        division3: params[:division3],
                                        division4: name, q: params[:q] ),
                                        class: params[:division4]==name ? 'active fourth' : ' '  -%> 
   <% end %>
</div>
<% end %>


<% if false and params[:division4].present? %>

  <% names_within_division4( params[:division4] ).each do |name| %>
      <%= link_to name, businesses_path(division1: params[:division1],
                                        division2: params[:division2],
                                        division3: params[:division3],
                                        division4: params[:division4],
                                        division5: name, q: params[:q]  ) -%> 
   <% end %>

<% end %>
</div>
