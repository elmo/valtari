<div class="container">
  <div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-content">
        <h5 class="header-five">Events <%= link_to 'New Event', new_admin_event_path, class:'right-link' -%></h5>
        <table>
        <tr>
          <th>Date</th>
          <th>Title</th>
          <th>Location</th>
          <th>Description</th>
          <th></th>
        </tr>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.start_date.strftime("%B %d, %Y") -%></td>
          <td><%= link_to event.title, admin_event_path(event) %></td>
          <td><%= event.location -%></td>
          <td><%= event.description -%></td>
          <td>
              <%= link_to 'View', admin_event_path(event) -%> &nbsp;
              <%= link_to 'Edit', edit_admin_event_path(event) -%> &nbsp;
              <%= link_to 'Delete', admin_event_path(event), method: :delete, data: { confirm: 'Are you sure you want to delete this event?' } -%>
          </td>
        </tr>
       <% end %>
         </table>

      </div>
    </div>  
  </div>
</div>