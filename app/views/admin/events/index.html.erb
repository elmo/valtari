<div class="row">
  <div class="col s12 m8">
    <h1>Events</h1>
     <table>
      <tr>
        <th>Date</th>
        <th>Time</th>
        <th>Location</th>
        <th>Title</th>
        <th>Description</th>
        <th></th>
      </tr>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.start_date.strftime("%B %d, %Y") -%></td>
          <td><%= event.start_time -%></td>
          <td><%= event.location -%></td>
          <td><%= link_to event.title, admin_event_path(event) %></td>
          <td><%= event.description -%></td>
          <td>
              <%= link_to 'view', admin_event_path(event) -%>
              <%= link_to 'edit', edit_admin_event_path(event) -%>
              <%= link_to 'delete', admin_event_path(event), method: :delete, data: { confirm: 'Are you sure you want to delete this event?' } -%>
          </td>
        </tr>
       <% end %>
     </table>
    </div>
  </div>
  <p><%= link_to 'new event', new_admin_event_path -%></p>
</div>
