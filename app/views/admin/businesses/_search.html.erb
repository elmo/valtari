  <%= form_tag admin_businesses_path, id: "business-search" , class: 'search-bar', role: 'search',  method: :get do %>

    <div class="row">
       <div class="sub-item col s2"> <%= text_field_tag :company_name, params[:company_name], type: "search", placeholder: "Search Company Name" %> </div>
       <div class="sub-item col s2"> <%= text_field_tag :city, params[:city], type: "search", placeholder: "City" %> </div>
       <div class="sub-item col s1"> <%= text_field_tag :state, params[:state], type: "search", placeholder: "State" %> </div>
       <div class="sub-item col s1"> <%= text_field_tag :postal_code, params[:postal_code], type: "search", placeholder: "Postal Code" %></div>
       <%= submit_tag 'Search', class: "btn sub-item" %>
       <%= link_to 'Clear', admin_businesses_path(show_divisions: params[:show_divisions]), class: 'btn clear sub-item' -%>
       <div class="sub-item">
        <%= hidden_field :show_divisions , 'true' %>
        <%= check_box_tag :show_all , 'true',  params[:show_all] %>
        <%= label_tag :show_all, 'Show all columns' %>
       </div>


    </div>

    <div class="row">
     <div id="admin-geo-divisions">
       <% if params[:show_divisions].present? and params[:show_divisions] == 'true' %>
         <%= render partial: 'admin/businesses/geo_divisions' -%>
       <% end %>
     </div>
    </div>

<% end %>

