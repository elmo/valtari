<div class="container">
	<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="details">

       <div class="row">

         <div class="col s6">

		    <table class="striped">
          <thead>
            <tr>
              <th><%= @business.company_name %></th>
            </tr>
          </thead>
            <tbody>
                <% business_attributes.reject{ |x| x=='company_name'}.each do |att| -%>
              <tr>
                  <td><%= att.humanize %></td>
                  <td>
                  <%= best_in_place @business, att.to_sym, url: admin_business_path(@business),  place_holder: 'edit'  %>
                  </td>
              </tr>
            <% end %>
            <tr>
                <td>Verification Status</td>
                <td><%= verification_status(@business) -%></td>
            </tr>
          </tbody>
        </table>
        </div>
        <%= render partial: '/admin/businesses/log_data', locals: { business: @business } %>
		</div>
	  </div>
	</div>
  </div>
</div>

<div class="container">
  <div class="row">
	<div class="col s12">
	 <div class="card">
	   <div class="card-content details">
         <%= link_to 'List', admin_businesses_path %>
       </div>
     </div>
  </div>
</div>
