<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col s12 l6 offset-l3">
      <div class="card">
        <div class="card-content">
          
          <h5 class="header-five">Industries</h5>

            <table>
              <thead>
                <tr>
                  <th>Name</th>
                  <th>NAICS Code</th>
                  <th colspan="2"></th>
                </tr>
              </thead>

              <tbody>
                <% @industries.each do |industry| %>
                  <tr>
                    <td><%= industry.name %></td>
                    <td><%= industry.code %></td>
                    <td><%= link_to 'Edit', edit_admin_industry_path(industry) %></td>
                    <td><%= link_to 'Destroy', admin_industry_path(industry), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <%= paginate(@industries) -%>

            <br>

            <%= link_to 'New Industry', new_admin_industry_path %>

        </div>
      </div>
    </div>
  </div>
</div>
