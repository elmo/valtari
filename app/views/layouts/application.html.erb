<!DOCTYPE html>
<html>
  <head>
    <title>Valtari Exchange</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>
    <%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <% if current_user.present? %><main class="logged-in"><% else %><main><% end %>
    
      <%= render partial: '/shared/user_account_navigation' %>
      <%= render partial: '/shared/flash' %>
      <div class="container <%= (request.path =~ /admin/) ? 'wide' : '' -%>">
        <div class="row">
          <% if controller_name != 'sessions' %>
            <div class="col l2 s12">
              <div class="side-bar">
                <%= render partial: '/home/side_bar' if current_user.present? -%>
                <%= render partial: '/my/side_bar_secondary' if request.path =~ /\/my/ and current_user.present? -%>
              </div>
            </div>
          <% end %>
          <div class="col <%= (controller_name == 'sessions') ? '' : 'l10' -%> s12">
            <%= yield %>
          </div>
        </div>
      </div>
    </main>
    
    <footer class="page-footer light-gray">
      <div class="container">
        <div class="row">
        <div class="col l6 s12">
            <h4 class=""> Â©2016  Valtari Exchange</h4>
            <p class="grey-text"></p>
          </div>

        </div>
      </div>
      <div class="footer-copyright">
        <div class="container">
        Valtari Exchange
        <br><br><br>
        <a class="grey-text text-lighten-4 right" href="#!"></a>
        <br><br>
        </div>
      </div>
    </footer>
  </body>
</html>
