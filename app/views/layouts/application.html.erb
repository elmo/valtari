<!DOCTYPE html>
<html>
  <head>
    <title>Valtari Exchange</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>
    <%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
      <main class="<%= (current_user.present?) ? 'logged-in' : '' -%>">
      <%= render partial: '/shared/user_account_navigation' %>
      <%= render partial: '/shared/flash' %>
      <div class="container <%= (request.path =~ /admin/) ? 'wide' : '' -%>">
          <div class="col <%= (controller_name == 'sessions') ? '' : '' -%> s12">
            <%= yield %>
          </div>
      </div>
    </main>

    <footer class="page-footer light-gray">
      <div class="footer-copyright">
        <div class="container">
        ©2017 Valtari OÜ Exchange
        <br><br><br>
        <a class="grey-text text-lighten-4 right" href="#!"></a>
        <br><br>
        </div>
      </div>
    </footer>

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-101269606-1', 'auto');
      ga('send', 'pageview');

    </script>

  </body>
</html>
