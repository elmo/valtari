<!DOCTYPE html>
<html>
  <head>
    <title>Valtari</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>
    <%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <main class="<% if current_user.present? %>logged-in<% end %>">
      <%= render partial: '/shared/user_account_navigation' %>
        <div>
          <%= render partial: '/shared/flash' %>
          <%= render partial: '/home/side_bar' -%>
          <%= render partial: '/my/side_bar' if request.path =~ /\/my/ -%>
          <%= yield %>
        </div>
      </div>
    </main>
    <footer class="page-footer dark-gray">
      <div class="container">
        <div class="row">
        <div class="col l6 s12">
            <h4 class="white-text">Valtari Exchange</h4>
            <p class="grey-text text-lighten-4"></p>
          </div>

        </div>
      </div>
      <div class="footer-copyright">
        <div class="container">
        Â© 2016 Valtari Exchange
        <br><br><br>
        <a class="grey-text text-lighten-4 right" href="#!"></a>
        <br><br>
        </div>
      </div>
    </footer>
  </body>
</html>
